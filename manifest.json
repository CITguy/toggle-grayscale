{
  "manifest_version": 3,
  "name": "Toggle Grayscale",
  "description": "Toggles a grayscale filter on the active tab.",
  "short_name": "grayscale",
  "version": "2.0.0",
  "icons": {
    "32": "images/icon32.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon": {
      "32": "images/icon32.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png"
    },
    "default_title": "Toggle grayscale"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "worker.js"
  }
}
